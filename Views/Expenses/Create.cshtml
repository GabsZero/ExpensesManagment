@model ExpenseManagment.Models.Expense

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Expense</h4>
<hr />
    <form asp-action="Create">  
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="MonthId" class="control-label"></label>
                    <select asp-for="MonthId" class="form-control" asp-items="ViewBag.MonthId"></select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="ExpenseTypeId" class="control-label"></label>
                    <select asp-for="ExpenseTypeId" class ="form-control" asp-items="ViewBag.ExpenseTypeId"></select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <a class="btn btn-primary" id="newExpenseType" href="@Url.Action("Create", "ExpenseTypes")">Create new expense type</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

