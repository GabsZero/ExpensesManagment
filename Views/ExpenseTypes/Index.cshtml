@model IEnumerable<ExpenseManagment.Models.ExpenseType>

@{
    ViewData["Title"] = "Index";
}

<input type="hidden" id="delete_route" value="@Url.Action("Delete", "ExpenseTypes")" />

<partial name="_Feedback" />

@await Component.InvokeAsync("IndexHeader", "Expense Types")

<table id="table"
       data-toggle="table"
       data-search="true"
       data-pagination="true">
    <thead>
        <tr>
            <th data-field="name">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="@item.Id">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a> |
                    <a data-id="@item.Id" onclick="showConfirmationMessage('@item.Id', '@item.Name')" data-name="@item.Name" class="btn btn-danger delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
